<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Maui.DataForms.Controls;assembly=Maui.DataForms.Core"
             x:Class="DynamicFormsSample.MainPage">

    <ScrollView>
        <Grid RowDefinitions="*,*,*,*" BindableLayout.ItemsSource="{Binding Fields}" VerticalOptions="Start">
            <BindableLayout.ItemTemplateSelector>
                <forms:DataFormsDataTemplateSelector />
            </BindableLayout.ItemTemplateSelector>
        </Grid>
    </ScrollView>

</ContentPage>
